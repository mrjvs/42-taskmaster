{
  "compilerOptions": {
    "outDir": "./build",
    "strict": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "isolatedModules": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "@taskmaster/*": [
      "src/*"
    ]
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
